<Page
    x:Class="NaiveMediaPlayer2.PlayOnline"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NaiveMediaPlayer2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical">
            <MediaElement x:Name="player" Margin="0,50,0,0" MaxHeight="450" MaxWidth="800"
                          HorizontalAlignment="Center" AreTransportControlsEnabled="True"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="URI" Height="20" Width="250" Margin="20,20,0,0"
                           PlaceholderText="http://" HorizontalAlignment="Center"/>
                <Button x:Name="play_online" Content="Play the Online Files" 
                          Margin="40,20,0,0" Background="AntiqueWhite"
                          Click="play_online_Click"/>
                <Button x:Name="download_online" Content="Download and play"
                           Margin="40,20,0,0" Background="AntiqueWhite"
                           Click="download_online_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
